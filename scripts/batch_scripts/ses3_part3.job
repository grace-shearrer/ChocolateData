#!/bin/bash
#
#SBATCH --job-name=CHOCO_S3
#SBATCH -N 1
#SBATCH -c 1
#SBATCH -t 12:00:00
#SBATCH --mem-per-cpu 80000
## %A == SLURM_ARRAY_JOB_ID
## %a == SLURM_ARRAY_TASK_ID
#SBATCH -o /projects/niblab/bids_projects/Experiments/ChocoData/error_files/fprep_%A_%a_ses-3_out.txt
#SBATCH -e /projects/niblab/bids_projects/Experiments/ChocoData/error_files/fprep_%a_ses-3_err.txt


sub="sub-${SLURM_ARRAY_TASK_ID}"


singularity exec -B /:/home_dir /projects/niblab/bids_projects/Singularity_Containers/fmriprep.simg fmriprep /home_dir/projects/niblab/bids_projects/Experiments/ChocoData/BIDS/ses-3 /home_dir/projects/niblab/bids_projects/Experiments/ChocoData/fmriprep/${sub}/ses-3 \
    participant  \
    --participant-label $sub \
    --fs-license-file /home_dir/projects/niblab/bids_projects/freesurfer/license.txt \
    --longitudinal \
    --fs-no-reconall \
    --omp-nthreads 16 --n_cpus 16  \
    --bold2t1w-dof 12 \
    --output-space template --template MNI152NLin2009cAsym \
    --debug  \
    -w /home_dir/projects/niblab/bids_projects/Experiments/ChocoData/fmriprep/${sub}/ses-3 \
    --resource-monitor --write-graph --stop-on-first-crash

